<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    ohos:width="match_parent"
    ohos:height="match_parent"
    xmlns:ohos="http://schemas.huawei.com/res/ohos">
    <NestedScrollView
        ohos:id="$+id:scrollview"
        ohos:height="0"
        ohos:width="match_parent"
        ohos:weight="9"
        ohos:top_margin="32vp"
        ohos:bottom_padding="16vp"
        ohos:layout_alignment="horizontal_center"
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:match_viewport="true" >
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content">
            <!-- $media:plant为在media目录引用的图片资源 -->
            <Image
                ohos:id="$+id:image_to_recognize"
                ohos:width="match_content"
                ohos:height="250vp"
                ohos:scale_mode="inside"
                ohos:start_padding="10vp"
                ohos:end_padding="10vp"
                ohos:top_padding="10vp"
                ohos:bottom_margin="6vp"
                ohos:top_margin="6vp"
                ohos:image_src="$media:testPicture"
                ohos:background_element
                    ="$graphic:rounded_rectangle"
                />
            <TextField
                ohos:id="$+id:tf_recognize_result"
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:start_padding="10vp"
                ohos:end_padding="10vp"
                ohos:text_size="15fp"
                ohos:multiple_lines="true"
                ohos:text="初始测试数据"/>
        </DirectionalLayout>
    </NestedScrollView>
    <DirectionalLayout
        ohos:height="0"
        ohos:weight="1"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Button
            ohos:id="$+id:bt_take_photo"
            ohos:height="match_parent"
            ohos:weight="1"
            ohos:width="0"
            ohos:end_margin="10vp"
            ohos:start_margin="10vp"
            ohos:top_margin="10vp"
            ohos:text_size="13fp"
            ohos:bottom_margin="10vp"
            ohos:background_element="$graphic:button"
            ohos:text="$string:take_photo"/>
        <Button
            ohos:id="$+id:bt_pick_picture"
            ohos:height="match_parent"
            ohos:weight="1"
            ohos:width="0"
            ohos:end_margin="10vp"
            ohos:start_margin="10vp"
            ohos:top_margin="10vp"
            ohos:bottom_margin="10vp"
            ohos:text_size="13fp"
            ohos:background_element="$graphic:button"
            ohos:text="$string:pick_picture"/>
        <Button
            ohos:id="$+id:bt_copy_result"
            ohos:height="match_parent"
            ohos:weight="1"
            ohos:width="0"
            ohos:end_margin="10vp"
            ohos:start_margin="10vp"
            ohos:top_margin="10vp"
            ohos:bottom_margin="10vp"
            ohos:text_size="13fp"
            ohos:background_element="$graphic:button"
            ohos:text="$string:copy_result"/>
        <Button
            ohos:id="$+id:clear_input"
            ohos:height="match_parent"
            ohos:weight="1"
            ohos:width="0"
            ohos:end_margin="10vp"
            ohos:start_margin="10vp"
            ohos:top_margin="10vp"
            ohos:bottom_margin="10vp"
            ohos:text_size="13fp"
            ohos:background_element="$graphic:button"
            ohos:text="$string:clear_input"/>
    </DirectionalLayout>

</DirectionalLayout>